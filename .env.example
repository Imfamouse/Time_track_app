# Global environment configuration for docker compose and tooling.
COMPOSE_PROJECT_NAME=time_track_app

# Backend and frontend exposed ports.
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Database credentials (override в `.env` для локальной разработки).
POSTGRES_DB=time_track
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Redis configuration.
REDIS_PORT=6379

# Outbound email placeholders.
SMTP_HOST=smtp.<PLACEHOLDER>.corp
SMTP_PORT=587
SMTP_USER=<PLACEHOLDER>
SMTP_PASSWORD=<PLACEHOLDER>

# Application security placeholders.
SSO_MODE=mock
SECRET_KEY=<PLACEHOLDER_SECRET>
